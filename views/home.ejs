    <div class="body d-flex flex-row justify-content-center">
        <div class="flexible-body">
            <div class="card-image">
                <img src="/uploads/Images/conversationimage.jpg" alt="Card Image" class="card-image" />
            </div>
            <div class="flex-body-buttons d-flex justify-content-center">
                <div class="card-buttons upload mb-3">
                    <a href="/upload" class="button-link">
                        <img src="uploads/Images/upload.png" alt="Upload Image" class="button-image" />
                        <h3>Upload</h3>
                    </a>
                </div>
                <div class="card-buttons download mt-3">
                    <a href="/search" class="button-link">
                        <img src="uploads/Images/download.png" alt="Search Image" class="button-image" />
                        <h3>Search</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="download-rating d-flex flex-wrap justify-content-around">
        <div class="downloads-ratings-item" id="downloadsItem">
            <h3>Downloads:<%= totalDownloads %>
            </h3>
        </div>
        <div class="downloads-ratings-item" id="ratingsItem">
            <h3>Rating:<%= averageRating %>
            </h3>
        </div>
        <div class="downloads-ratings-item" id="totalItem">
            <h3>Papers Available:<%= totalUniquePosts %>
            </h3>
        </div>
    </div>

